<% if blog.new_record? %>
  <h1>New blog</h1>
<% else %>
  <h1>Editing blog</h1>
<% end %>

<%= bootstrap_form_for(blog) do |f| %>
  <%= f.text_field :title %>
  <%= f.rich_text_area :content %>
  <%= f.submit %>
<% end %>

<% if blog.persisted? %>
  <%= button_to blog, method: :delete, class: 'delete-button' do %>
    <i class="bi bi-trash"></i>
  <% end %>
<% end %>
